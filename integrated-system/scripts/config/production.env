# Production Environment Configuration
# RFID Docket Tracking System

# Application Configuration
APP_USER="docket-app"
APP_GROUP="docket-app"
API_PORT=3001
FRONTEND_PORT=3000
WORKER_PORT=3002

# Repository Configuration
REPOSITORY_URL="https://github.com/your-org/docket-tracking.git"

# Database Configuration
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="docket_tracking_prod"
DB_USER="docket_user"
DB_PASSWORD="${DB_PASSWORD}"
DB_SSL=true
DB_POOL_MIN=10
DB_POOL_MAX=50

# Redis Configuration (for sessions and caching)
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD="${REDIS_PASSWORD}"

# Security Configuration
JWT_SECRET="${JWT_SECRET}"
SESSION_SECRET="${SESSION_SECRET}"
ENCRYPTION_KEY="${ENCRYPTION_KEY}"

# SSL Configuration
SSL_CERT_PATH="/etc/ssl/certs/docket-tracking.crt"
SSL_KEY_PATH="/etc/ssl/private/docket-tracking.key"

# CORS Configuration
CORS_ORIGIN="https://docket-tracking.yourdomain.com"

# Email Configuration (SendGrid)
SENDGRID_API_KEY="${SENDGRID_API_KEY}"
FROM_EMAIL="noreply@yourdomain.com"

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID="${TWILIO_ACCOUNT_SID}"
TWILIO_AUTH_TOKEN="${TWILIO_AUTH_TOKEN}"
TWILIO_PHONE_NUMBER="${TWILIO_PHONE_NUMBER}"

# File Storage Configuration
UPLOAD_PATH="/opt/docket-tracking/uploads"
MAX_FILE_SIZE="50MB"

# Logging Configuration
LOG_LEVEL="info"
LOG_PATH="/var/log/docket-tracking"

# Monitoring Configuration
PROMETHEUS_PORT=9090
HEALTH_CHECK_PORT=8080

# Backup Configuration
BACKUP_S3_BUCKET="docket-tracking-backups"
BACKUP_S3_REGION="us-east-1"
AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000

# RFID Configuration
RFID_READER_TIMEOUT=5000
RFID_MAX_RETRIES=3

# AI/ML Configuration
AI_MODEL_PATH="/opt/docket-tracking/models"
AI_CONFIDENCE_THRESHOLD=0.75

# Performance Configuration
CACHE_TTL=3600  # 1 hour
MAX_CONCURRENT_UPLOADS=10
WORKER_CONCURRENCY=4

# Notification Configuration
SLACK_WEBHOOK_URL="${SLACK_WEBHOOK_URL}"
TEAMS_WEBHOOK_URL="${TEAMS_WEBHOOK_URL}"

# Feature Flags
ENABLE_REAL_TIME_TRACKING=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_AI_CLASSIFICATION=true
ENABLE_MOBILE_SYNC=true

# Audit Configuration
AUDIT_RETENTION_DAYS=2555  # 7 years
AUDIT_ENCRYPTION=true
COMPLIANCE_MODE=true

# Development/Debug Flags (should be false in production)
DEBUG_MODE=false
ENABLE_MOCK_RFID=false
SKIP_EMAIL_VERIFICATION=false