# Production Environment Configuration
# RFID Docket Tracking System

# Server Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://dockettrack.gov

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=rfid_tracking_prod
DB_USER=rfid_prod_user
DB_PASSWORD=your-secure-password-here

# Redis Cache
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-change-this
JWT_EXPIRES_IN=24h

# RFID Configuration
RFID_SIMULATION_MODE=false
RFID_HARDWARE_PORT=/dev/ttyUSB0

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@dockettrack.gov
EMAIL_ADMIN=admin@dockettrack.gov

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Security
CORS_ORIGIN=https://dockettrack.gov
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/dockettrack.crt
SSL_KEY_PATH=/etc/ssl/private/dockettrack.key

# Monitoring
ENABLE_MONITORING=true
OTEL_ENDPOINT=https://your-monitoring-endpoint
LOG_LEVEL=info

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=dockettrack-backups

# AWS Configuration (if using)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/uploads/dockettrack

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_INTERVAL=3600000

# Compliance
COMPLIANCE_MODE=GOVERNMENT
AUDIT_RETENTION_YEARS=7
DATA_ENCRYPTION_ENABLED=true