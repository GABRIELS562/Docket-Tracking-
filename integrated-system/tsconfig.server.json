{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node", "jest"],
    "moduleResolution": "node"
  },
  "include": ["src/server.ts", "src/routes/**/*", "src/services/**/*", "src/middleware/**/*", "src/utils/**/*", "src/models/**/*", "src/migrations/**/*"],
  "exclude": ["node_modules", "dist", "tests", "src/**/*.tsx", "src/dashboard/**/*", "src/App.tsx", "src/index.tsx"]
}