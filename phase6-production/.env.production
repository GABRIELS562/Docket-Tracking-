# Production Environment Configuration
# RFID Docket Tracking System - Phase 6 Production

# Application Environment
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration (Master/Replica Setup)
DB_HOST=postgres-master
DB_REPLICA_HOST=postgres-replica
DB_PORT=5432
DB_NAME=docket_tracking_prod
DB_USER=docket_user
DB_PASSWORD=ComplexProductionPassword2025!
DB_POOL_MIN=10
DB_POOL_MAX=50
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Redis Configuration (Caching & Sessions)
REDIS_HOST=redis-master
REDIS_REPLICA_HOST=redis-replica
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_DB=1
REDIS_CACHE_DB=2
REDIS_TTL=3600

# Security Configuration
JWT_SECRET=SuperSecureJWTSecret2025ForProduction!ChangeInProduction
JWT_EXPIRY=8h
JWT_REFRESH_EXPIRY=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=UltraSecureSessionSecret2025!
ENCRYPTION_KEY=32ByteEncryptionKeyForProduction!

# CORS and Security
CORS_ORIGIN=https://dockettrack.company.com,https://admin.dockettrack.company.com
CORS_CREDENTIALS=true
HELMET_CSP=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000
SLOW_DOWN_WINDOW=15
SLOW_DOWN_DELAY=500

# File Upload Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=csv,xlsx,pdf,jpg,png
UPLOAD_RATE_LIMIT=10

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=30
LOG_DATE_PATTERN=YYYY-MM-DD
ENABLE_ACCESS_LOG=true
ENABLE_ERROR_LOG=true

# Performance & Monitoring
ENABLE_CLUSTERING=true
MAX_WORKERS=4
WORKER_MEMORY_LIMIT=2048
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
CACHE_TTL=300
ENABLE_METRICS=true
METRICS_INTERVAL=60

# RFID Configuration
RFID_SIMULATION_MODE=false
RFID_EVENT_BATCH_SIZE=1000
RFID_EVENT_FLUSH_INTERVAL=5000
RFID_READER_TIMEOUT=30000
RFID_RETRY_ATTEMPTS=3

# Backup Configuration
ENABLE_AUTO_BACKUP=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=rfid-docket-backups
AWS_REGION=us-east-1

# External Services
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=alerts@company.com
SMTP_SECURE=true
EMAIL_FROM=RFID Docket System <noreply@company.com>

# Monitoring & Alerting
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001
ELASTICSEARCH_HOST=elasticsearch:9200
KIBANA_PORT=5601

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/rfid-docket.crt
SSL_KEY_PATH=/etc/ssl/private/rfid-docket.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# High Availability
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
GRACEFUL_SHUTDOWN_TIMEOUT=30

# Performance Tuning
OBJECT_CACHE_SIZE=10000
SEARCH_CACHE_SIZE=5000
USER_SESSION_TIMEOUT=28800
API_TIMEOUT=30000
DB_QUERY_TIMEOUT=10000

# Legal & Compliance
AUDIT_RETENTION_YEARS=7
GDPR_COMPLIANCE=true
HIPAA_COMPLIANCE=false
EVIDENCE_CHAIN_VALIDATION=strict
DIGITAL_SIGNATURE_REQUIRED=true

# Development Overrides (Remove in production)
# DEBUG_ENABLED=false
# VERBOSE_LOGGING=false
# ENABLE_SWAGGER=false