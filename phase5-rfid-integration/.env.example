# Server Configuration
PORT=3004
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rfid_hardware_integration
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=20

# RFID Hardware Configuration
RFID_MODE=simulation
RFID_READER_COUNT=3
RFID_BASE_IP=192.168.1.100
RFID_BASE_PORT=14150

# Zebra FX9600 Configuration
ZEBRA_READER_TYPE=FX9600
ZEBRA_ANTENNA_COUNT=4
ZEBRA_MAX_POWER=30.0
ZEBRA_FREQUENCY_REGION=US

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=rfid_client
MQTT_PASSWORD=secure_password
MQTT_CLIENT_ID=phase5-rfid-service
MQTT_KEEP_ALIVE=60

# TCP Configuration
TCP_ENABLE=true
TCP_TIMEOUT=5000
TCP_RECONNECT_INTERVAL=10000

# Performance Settings
TAG_PROCESSING_BATCH_SIZE=100
EVENT_PROCESSING_INTERVAL=100
MAX_EVENTS_PER_SECOND=1000
READER_HEALTH_CHECK_INTERVAL=30000

# Real-time Processing
ENABLE_REAL_TIME_TRACKING=true
LOCATION_UPDATE_THRESHOLD=3
TAG_ABSENCE_TIMEOUT=300000

# Simulation Settings
SIMULATION_ENABLE=true
SIMULATION_TAG_COUNT=1000
SIMULATION_READERS_COUNT=6
SIMULATION_EVENT_RATE=50
SIMULATION_MOVEMENT_PROBABILITY=0.1

# WebSocket Configuration
WS_PORT=3005
WS_CORS_ORIGIN=http://localhost:3000

# Monitoring & Alerts
ENABLE_HEALTH_MONITORING=true
ALERT_EMAIL_ENABLED=false
ALERT_WEBHOOK_URL=

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
LOG_RFID_EVENTS=true

# Security
READER_AUTH_ENABLED=true
READER_AUTH_TOKEN=secure_rfid_token_here